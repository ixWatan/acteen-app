<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="5"
    android:elevation="7dp"
    android:orientation="vertical">

    <!-- Content layout -->

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/customborder"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:background="@null"
            android:id="@+id/nav_homeActivist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            android:src="@drawable/home"
            android:scaleType="centerInside"
            app:tint="@color/lightGrayWatanNavIcons"

            android:padding="10dp"
            />

<!--
        android:onClick="onNavHomeClick"
-->


        <ImageButton
            android:background="@null"
            android:id="@+id/nav_searchActivist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            android:src="@drawable/icon_search"
            android:scaleType="centerInside"
            app:tint="@color/lightGrayWatanNavIcons"

            android:padding="10dp"
            />

        <ImageButton
            android:background="@null"
            android:id="@+id/nav_bellActivist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            app:tint="@color/lightGrayWatanNavIcons"
            android:src="@drawable/icon_bell"
            android:scaleType="centerInside"
            android:padding="10dp"
            />


        <!--<ImageButton
            android:id="@+id/nav_addPost"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.7"
            android:src="@drawable/more"
            android:scaleType="centerInside"
            android:onClick="onNavAddPostClick"
            android:background="@null"
            android:padding="10dp"
            />-->



        <ImageButton
            android:id="@+id/nav_profileActivist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            android:src="@drawable/user"
            android:scaleType="centerInside"
            app:tint="@color/lightGrayWatanNavIcons"

            android:padding="10dp"
            android:background="@null"
            />

<!--
        android:onClick="onNavProfileClick"
-->

    </LinearLayout>

</RelativeLayout>
