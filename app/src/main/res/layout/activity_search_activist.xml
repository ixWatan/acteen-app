    tools:context=".homepage.homeactivist.SearchActivityActivist">

    <!-- Seach bar and profile icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImageView"
        android:layout_width="40dp"

        android:layout_height="40dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_account"
        />

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:id="@+id/simpleSearchView"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            app:iconifiedByDefault="false"
            android:layout_marginLeft="20dp"
            app:queryHint="Search"
            android:layout_height="match_parent"
            app:queryBackground="@drawable/rounded_search_gray"
            app:submitBackground="@drawable/rounded_search_gray"
            android:background="@drawable/rounded_search_gray"
             />



